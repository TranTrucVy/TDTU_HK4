<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_root"
    android:orientation="horizontal">

    <TableRow
        android:layout_marginTop="-4dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/border_table_1">
        <TextView
            android:id="@+id/his_nField"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sân số 1" />
        <TextView
            android:id="@+id/his_tField"
            android:layout_marginRight="-4dp"
            android:background="@drawable/border_table_1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5 người" />
        <TextView
            android:id="@+id/his_tFrame"
            android:layout_marginRight="-4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border_table_1"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="21h45 - 19h30" />
        <TextView
            android:id="@+id/his_dPick"
            android:layout_marginRight="-4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border_table_1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12/12/2022" />
        <TextView
            android:id="@+id/his_pPick"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border_table_1"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="250k" />
    </TableRow>
</LinearLayout>